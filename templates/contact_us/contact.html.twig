                    {{ form_start(ContactForm, {'attr': {'class': 'form'}}
					) }}
                        <div class="row">
                          <div class="col-lg-6">
                            <fieldset>
                                {{ form_label(ContactForm.titre, null, {'label_attr': {'class': 'form-label'}}
                                ) }}
                                {{ form_widget(ContactForm.titre, {'attr': {'class': 'form-control'}}
                                ) }}
                                {{ form_errors(ContactForm.titre, {'attr': {'class': 'text-danger'}}
                                ) }}
                            </fieldset>
                          </div>
                          <div class="col-lg-6">
                            <fieldset>
                                {{ form_label(ContactForm.email, null, {'label_attr': {'class': 'form-label'}}
                                ) }}
                                {{ form_widget(ContactForm.email, {'attr': {'class': 'form-control'}}
                                ) }}
                                {{ form_errors(ContactForm.email, {'attr': {'class': 'text-danger'}}
                                ) }}
                            </fieldset>
                          </div>
                          <div class="col-lg-12">
                            <fieldset>
                                {{ form_label(ContactForm.description, null, {'label_attr': {'class': 'form-label'}}
                                ) }}
                                {{ form_widget(ContactForm.description, {'attr': {'class': 'form-control'}}
                                ) }}
                                {{ form_errors(ContactForm.description, {'attr': {'class': 'text-danger'}}
                                ) }}
                            </fieldset>
                          </div>
                          
                        </div>
                      {{ form_end(ContactForm) }}
                </div>
            </div>
        </div>
    </div>
