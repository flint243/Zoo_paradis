                    <div class="section-heading">
                        <h2>Nos habitats</h2>
                        <span>Ici nous vous présentons les differents habitats de nos animaux. Cliquez sur une image pour voir les detailles</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <!-- slider -->
        <div id="slideShowHabitat">
        {% for image in habitats %}
            {% if image.id in [1, 2, 3, 4] %}
                <div id="sliderHabitat" class="slidereHabitat">
                    <h2 class="mb-3 ">{{ image.nom }}</h2>

                    {# Définition de la route spécifique en fonction de l'ID #}
                    {% set detailPath = '' %}
                    {% if image.id == 1 %}
                        {% set detailPath = path('animal_show_celeste', {id: image.id}) %}
                    {% elseif image.id == 2 %}
                        {% set detailPath = path('animal_show', {id: image.id}) %}
                    {% elseif image.id == 3 %}
                        {% set detailPath = path('animal_show_aquatique', {id: image.id}) %}
                    {% elseif image.id == 4 %}
                        {% set detailPath = path('detail_page4', {id: image.id}) %}
                    {% endif %}

                    <a href="{{ detailPath }}">
                        <img src="{{ asset('uploadHabitats/imagesHabitats/' ~ image.habitatimage) }}" name="slideImgHabitat" class="slideImgHabitat" alt="Image du slider">
                    </a>        
                    <div id="bandeauColorHabitat">
                        <div id="InfoSliderHabitat">
                            <h5 class="">{{ image.description }}</h5>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        </div>
        </div>
