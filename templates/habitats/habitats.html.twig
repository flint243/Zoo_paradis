{% extends 'base.html.twig' %}

{% block title %}Nos habitats{% endblock %}

{% block body %}
    <!-- ***** Preloader Start ***** -->
        <div id="preloader">
            <div class="jumper">
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>  
    <!-- ***** Preloader End ***** -->
    
    
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
			<div class="connexion">
				{% if app.user %}
					<div class="mb-3 userConnect">
						Bonjour
						{{ app.user.nom }}
						{% if app.user.profileImage %}
							<img src="/uploadsUsers/imagesUsers/{{ app.user.profileImage }}" class="rounded-circle" width="40px" height="35px"/>
						{% else %}
							<img src="{{ asset('/assets/images/avatar/avatar2.png') }}" class="rounded-circle bg-light" width="30px" height="30px"/>
						{% endif %}
					</div>

					<div class="deconnexionBtn btn btn-danger">
						<a href="{{ path('app_logout') }}">
							Déconnexion
						</a>
					</div>

				{% else %}
					<a href="{{ path('app_login') }}" class="connexionBtn">
						Connexion staff
					</a>
				{% endif %}
			</div>

			<div class="container">
				<div class="row">
					<div class="col-12">
						<nav
							class="main-nav">

							<!-- ***** Logo Start ***** -->
							<a href="/" class="mt-2 logo">
								<div class="row p-2 bg-light rounded">
									<img src="{{ asset('/assets/images/avatar/avatar2.png') }}" class="rounded-circle" width="30px" height="30px"/>
									<h4 class="text-success font-weight-bold">
										Zoo paradis
									</h4>
								</div>
							</a>
							<!-- ***** Logo End ***** -->

							<!-- ***** Menu Start ***** -->
							<ul class="nav">
								{% if is_granted('ROLE_SUPER_ADMIN') %}
									<li>
										<a href="/admin" class="adminBtn px-2 rounded bg-danger">
											Super Admin
										</a>
									</li>
								{% elseif is_granted('ROLE_ADMIN') %}
									<li>
										<a href="/admin" class="adminBtn px-2 rounded bg-warning">
											Admin employé
										</a>
									</li>
								{% elseif is_granted('ROLE_VETERINAIRE') %}
									<li>
										<a href="/admin" class="adminBtn px-2 rounded bg-info">
											Admin véto
										</a>
									</li>
								{% endif %}
								<li class="scroll-to-section">
									<a href="/" class="active">
										Accueil
									</a>
								</li>
								<li>
									<a href="/about">
										A propos
									</a>
								</li>
								<li>
									<a href="/services">
										Nos services
									</a>
								</li>
								<li>
									<a href="/contact">
										Contact
									</a>
								</li>

								{#<li class="scroll-to-section"><a href="#men">Eau</a></li></ul></li>#}
							</ul>

							<a class='menu-trigger'>
								<span>
									Menu
								</span>
							</a>
							<!-- ***** Menu End ***** -->
						</nav>
					</div>
				</div>
			</div>
		</header>
    <!-- ***** Header Area End ***** -->

    <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Nos habitats</h2>
                        <span>Awesome &amp; Creative HTML CSS layout by TemplateMo</span>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <!-- ***** Main Banner Area End ***** -->

    <!-- ***** Products Area Starts ***** -->
    <section class="section" id="products">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h2>Nos habitats</h2>
                        <span>Ici nous vous présentons les differents habitats de nos animaux. Cliquez sur une image pour voir les detailles</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mesHabitats">
            <div class="row">
                <div class="col-sm-4">
                    <div class="habitatCol">
                        {% for imageAerien in habitatAerien %}
                        <div class="">
                            <h2 class="mb-3 ">Habitat {{ imageAerien.nom }}</h2>
                            <a href="/habitats/aerien">
                                <img src="{{ asset('uploadsHabitats/imagesHabitats/' ~ imageAerien.habitatimage) }}" alt="Image du">
                            </a>        
                                <div id="bandeauHabitatHabitatAerien">
                                    <div id="InfoHabitatAerien">
                                        <h5 class="">{{ imageAerien.description }}</h5>
                                    </div>
                                </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="habitatCol">
                        {% for imageTerre in habitatTerrestre %}
                            <div class="HabitatTerresrtre">
                                <h2 class="mb-3 ">Habitat {{ imageTerre.nom }}</h2>
                                <a href="/habitats/terrestre">
                                    <img src="{{ asset('uploadsHabitats/imagesHabitats/' ~ imageTerre.habitatimage) }}" alt="Image du slider">
                                </a>        
                                <div id="bandeauHabitatTerrestre">
                                    <div id="InfoHabitatTerrestre">
                                        <h5 class="">{{ imageTerre.description }}</h5>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="habitatCol">
                        {% for imageAquatique in habitatAquatique %}
                                <div class="HabitatAquatique">
                                    <h2 class="mb-3 ">Habitat {{ imageAquatique.nom }}</h2>
                                    <a href="/habitats/aquatique">
                                        <img src="{{ asset('uploadsHabitats/imagesHabitats/' ~ imageAquatique.habitatimage) }}" alt="Image du slider">
                                    </a>        
                                    <div id="bandeauHabitatAquatique">
                                        <div id="InfoHabitatAquatique">
                                            <h5 class="">{{ imageAquatique.description }}</h5>
                                        </div>
                                    </div>
                                </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
         </div>
    </section>

